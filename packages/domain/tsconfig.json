{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "emitDeclarationOnly": true,
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}