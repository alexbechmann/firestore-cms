{
  "version": 2,
  "builds": [
    {
      "src": "docs/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "demo/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/demo/api/(.*)", "dest": "/api/$1" },
    { "src": "/demo/(.*)", "dest": "/demo/$1" },
    { "src": "/(.*)", "dest": "/docs/$1" }
  ],
  "github": {
    "autoAlias": true
  }
}
