{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": false,
    "strict": false
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/dashboard" },
    { "path": "./packages/server" },
    { "path": "./packages/plugin-active-directory-auth" },
    { "path": "./packages/plugin-code-gen" },
    { "path": "./packages/plugin-file-system-image" }
  ],
  "exclude": ["node_modules", "**/*.test.*"],
  "include": ["./consumer", "./packages"]
}
