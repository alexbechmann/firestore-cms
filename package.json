  },
  "homepage": "https://github.com/alexbechmann/firestore-cms#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "remove-node-modules": "^1.7.4",
    "rimraf": "^2.6.2"
  }
}
