{
  "name": "ssr",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "consumer",
    "packages/*"
  ],
  "scripts": {
    "start": "npm-run-all -p consumer:start core:start dashboard:start server:start",
    "postinstall": "npm-run-all core:build dashboard:build server:build",
    "consumer:start": "cd ./consumer && yarn run start",
    "core:start": "cd ./packages/core && yarn run start",
    "core:build": "cd ./packages/core && yarn run build",
    "dashboard:start": "cd ./packages/dashboard && yarn run start",
    "dashboard:build": "cd ./packages/dashboard && yarn run build",
    "server:start": "cd ./packages/server && yarn run start",
    "server:build": "cd ./packages/server && yarn run build",
    "test": "ts-mocha --paths -p ./__tests__/tsconfig.json __tests__/**/*.test*.ts",
    "t": "tsc -p __tests__ && ",
    "test:watch": "yarn run test --watch --watch-extensions ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "4.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "4.1.5",
    "ts-mocha": "^2.0.0"
  }
}
