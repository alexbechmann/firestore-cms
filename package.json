{
  "name": "@refract-cms/dev",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "core:build": "cd packages/core && yarn run build",
    "core:start": "cd packages/core && yarn start",
    "core:clean": "cd packages/core && remove-node-modules && rimraf package-lock.json",
    "consumer-core:start": "cd playground/react-app && yarn run start",
    "consumer-core:clean": "cd playground/react-app && remove-node-modules && rimraf package-lock.json",
    "domain:build": "cd packages/domain && yarn run build",
    "domain:start": "cd packages/domain && yarn start",
    "docs-app:start": "cd docs-app && yarn run start",
    "docs-app:clean": "cd docs-app && remove-node-modules && rimraf package-lock.json",
    "server:start": "cd packages/server && yarn start",
    "server:build": "cd packages/server && yarn run build",
    "server:clean": "cd packages/server && remove-node-modules && rimraf package-lock.json",
    "consumer-server:start": "cd playground/server && yarn start",
    "consumer-server:clean": "cd playground/server && remove-node-modules && rimraf package-lock.json",
    "docker:start": "docker-compose up --build",
    "postinstall": "npm-run-all domain:build core:build server:build",
    "start": "npm-run-all -p docker:start core:start docs-app:start server:start consumer-server:start consumer-core:start domain:start",
    "clean": "npm-run-all core:clean consumer-core:clean docs-app:clean server:clean consumer-server:clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexbechmann/refract-cms.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexbechmann/refract-cms/issues"
  },
  "homepage": "https://github.com/alexbechmann/refract-cms#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "remove-node-modules": "^1.7.4",
    "rimraf": "^2.6.2"
  },
  "workspaces": ["packages/core", "packages/server", "playground/react-app", "playground/server", "docs-app"]
}
